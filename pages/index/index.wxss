/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  padding: 0;
  box-sizing: border-box;
  position: relative;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 150rpx;
  z-index: 1;
}

.logo {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
  border-radius: 50%;
  box-shadow: 0 0 30rpx rgba(255, 255, 255, 0.5);
}

.app-title {
  font-size: 60rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 20rpx;
}

.app-subtitle {
  font-size: 36rpx;
  color: #fff;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.3);
}

.start-button-container {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 100rpx;
  z-index: 1;
}

.start-button {
  width: 60%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  font-weight: 500;
  background-color: #8CD790;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

/* 山水背景样式 */
.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
} 