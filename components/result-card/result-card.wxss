/* components/result-card/result-card.wxss */
.result-card {
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.result-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  margin-bottom: 20rpx;
}

.result-items {
  margin-top: 10rpx;
}

.result-item {
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.result-item:last-child {
  border-bottom: none;
}

.item-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
} 