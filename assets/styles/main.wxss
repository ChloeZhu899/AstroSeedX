/* 主样式文件 */

/* 输入行样式 */
.input-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.input-row:last-child {
  border-bottom: none;
}

.input-label {
  font-size: 30rpx;
  color: #333;
}

.input-content {
  font-size: 30rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.arrow-right {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
  margin-left: 10rpx;
}

/* 选项卡片样式 */
.option-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 15rpx;
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.option-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.option-title {
  font-size: 28rpx;
  color: #333;
}

/* 结果区块样式 */
.result-block {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.result-block:last-child {
  border-bottom: none;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.result-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
} 