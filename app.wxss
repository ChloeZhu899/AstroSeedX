/**app.wxss**/
page {
  height: 100%;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
  background-color: #f8f8f8;
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
  background-repeat: no-repeat;
  color: #333;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 40rpx 0;
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
}

/* 背景图片样式 */
.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: -1;
  object-fit: cover;
}

.card {
  width: 90%;
  margin: 20rpx 0;
  padding: 30rpx;
  border-radius: 15rpx;
  background-color: transparent;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.main-button {
  background-color: #8CD790;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  font-weight: 500;
}

.secondary-button {
  background-color: rgba(255, 255, 255, 0.8);
  color: #666;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 1px solid #ddd;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 导航栏样式 */
.nav-bar {
  width: 100%;
  height: 90rpx;
  background-color: #8CD790;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  color: white;
  font-size: 36rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
} 